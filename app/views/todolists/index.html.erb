<h1 class="heading">Books</h1>
<div class="index-main">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'show', todolist_path(book.id) %>
          <%= link_to 'edit', edit_todolist_path(book.id) %>
          <%= link_to 'destroy', destroy_todolist_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <h1 class="newbook">New Book</h1>
  <%= form_with model: @book, url:'/todolists', local:true do |f| %>
  <div class="newbook-text">
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <h4>
    <%= f.submit 'Create Book' %>
    </h4>
  <% end %>
  </div>

  <% if @book.errors.any? %>
  <div class="alert">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>Error : Body can't be blank</li>
      <% end %>
    </ul>
  </div>
  <% end %>

